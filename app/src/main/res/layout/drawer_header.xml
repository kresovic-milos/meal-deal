<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

    <ImageView
        android:layout_centerVertical="true"
        android:src="@drawable/planks_small"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:background="@drawable/blackboard_small"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textview_drawer_header_meal"
            android:text="@string/meal"
            android:textColor="@color/chalk_white"
            android:textSize="60dp"
            android:paddingLeft="50dp"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/textview_drawer_header_deal"
            android:text="@string/deal"
            android:textColor="@color/chalk_white"
            android:textSize="36dp"
            android:paddingLeft="50dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_marginTop="-20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"/>


    </LinearLayout>


</RelativeLayout>